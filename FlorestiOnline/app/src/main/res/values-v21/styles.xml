<resources>


    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#67b0d6</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#548fae</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">#548fae</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="actionBarTheme">@style/MyTheme.ActionBar</item>
    </style>

    <style name="MyTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#38474f</item>
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">#38474f</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <!-- Text color-->
    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>


</resources>
