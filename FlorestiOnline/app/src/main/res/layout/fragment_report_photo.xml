<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ro.decode.florestionline.ReportPhoto"
    >



    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:context="ro.decode.florestionline.ReportPhoto">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="120dp"
            android:layout_marginTop="20dp"
            android:textColor="#969696" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="captureaza un moment"
            android:id="@+id/textView7"
            android:textSize="22dp"
            android:textColor="#969696"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/editText2"
            android:background="@drawable/bg_white_shadow"
            android:hint="strada"
            android:textColor="#969696"
            android:textColorHint="#969696"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|left"
            android:paddingRight="40dp"
            android:paddingLeft="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:id="@+id/editText3"
            android:background="@drawable/bg_white_shadow"
            android:hint="detalii"
            android:textColor="#969696"
            android:textColorHint="#969696"
            android:paddingLeft="10dp"
            android:layout_below="@+id/editText2"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="40dp"
            android:gravity="left|top" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="TRIMITE REPORT"
            android:id="@+id/button2"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:background="@drawable/blue_button"
            android:layout_below="@+id/editText3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="o"
            android:id="@+id/button3"
            android:layout_alignTop="@+id/editText2"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:background="?android:attr/selectableItemBackground"
            android:textAllCaps="false"
            android:textColor="#969696"
            android:textSize="22sp"
            android:layout_above="@+id/editText3" />

    </RelativeLayout>
</ScrollView>