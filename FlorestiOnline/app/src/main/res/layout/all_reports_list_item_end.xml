<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_type1_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_bg_round_botto"
    android:paddingTop="20dp"
    android:clipToPadding="false"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:layout_marginBottom="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView9"
        android:src="@drawable/sponsor"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem isprum dolor sit"
        android:id="@+id/textView6"
        android:textSize="18dp"
        android:textColor="#d2455c"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView11"
        android:src="@drawable/green_map"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vivamus consequat  fringilla lorem, at accumsan  leo posuere id"
        android:id="@+id/textView8"
        android:textColor="#b8b8b8"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Floresti, strada Proii"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/imageView11"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginLeft="5dp"
        android:textColor="#9acd93"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:maxWidth="170dp" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView18"
        android:src="@drawable/calendar"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25.07.12"
        android:id="@+id/textView10"
        android:textColor="#9acd93"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:layout_alignTop="@+id/imageView18"
        android:layout_toRightOf="@+id/imageView18"
        android:layout_toEndOf="@+id/imageView18"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_marginLeft="5dp" />

</RelativeLayout>