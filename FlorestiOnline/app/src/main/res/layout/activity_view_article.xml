<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.decode.florestionline.ViewArticle"
    android:background="#e8e8e8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/sky2"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/image_gradient" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            android:id="@+id/relativeLayout"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share pe:"
                android:id="@+id/textView13"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:textColor="#636363"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="a"
                android:textAllCaps="false"
                android:id="@+id/button4"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_marginTop="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#8d8d8d"
                android:textSize="30dp"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="c"
                android:textAllCaps="false"
                android:id="@+id/button5"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#8d8d8d"
                android:textSize="30dp"
                android:layout_alignTop="@+id/button4"
                android:layout_toRightOf="@+id/button4"
                android:layout_toEndOf="@+id/button4"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="b"
                android:textAllCaps="false"
                android:id="@+id/button6"
                android:background="?android:attr/selectableItemBackground"

                android:textColor="#8d8d8d"
                android:clickable="true"
                android:textSize="30dp"
                android:layout_alignTop="@+id/button5"
                android:layout_toRightOf="@+id/button5"
                android:layout_toEndOf="@+id/button5"
                android:gravity="center_vertical|center_horizontal" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/button4"
                android:layout_alignLeft="@+id/button4"
                android:layout_alignStart="@+id/button4"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#e2e2e2"
                android:id="@+id/linearLayout2"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec nec tempor erat. Vivamus  facilisis dignissim ex, consectetur congue justo  pellentesque nec. Aenean volutpat efficitur  mi, in consectetur libero maximus id.  Pellentesque vitae tincidunt leo. Mauris  sagittis purus bibendum, pretium ligula at,  consequat tellus. Ut id pulvinar lacus. Quisque  velit velit, porta non elementum at, egestas  non orci.  Nulla convallis dolor vel ipsum sodales  rhoncus non in leo. Nulla fermentum nisi a  nibh imperdiet malesuada. Lorem ipsum dolor  sit amet, consectetur adipiscing elit.\n\n\nNullam eu  justo vitae libero mattis malesuada. Etiam scelerisque fermentum nibh vitae ornare.  Curabitur pretium finibus sem, a facilisis est  convallis sit amet. Aenean pulvinar tortor eget auctor rutrum. Maecenas sodales maximus  interdum. Suspendisse tristique sapien rutrum leo rhoncus tempor. "
                android:id="@+id/textView14"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Florestiul are un nou primar"
            android:id="@+id/textView11"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scris in 69.69.1995 de Mihaela"
            android:id="@+id/textView12"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_marginBottom="15dp"
            android:textSize="11dp"
            android:textColor="#bbb" />

    </RelativeLayout>
</ScrollView>
