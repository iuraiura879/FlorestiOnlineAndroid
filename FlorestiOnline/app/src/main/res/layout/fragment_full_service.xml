<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ro.decode.florestionline.MainActivity"
    android:scrollbars="none"

    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="#d2455c">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:id="@+id/relativeOver"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:id="@+id/relativeMain"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:padding="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_bg_round">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="BACK TO HOME"
                android:id="@+id/button8"
                android:onClick="goHome"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ededed"
                android:drawableLeft="@drawable/back_arrow_selector"
                android:drawablePadding="5dp"
                android:background="#0fff"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|left" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/imageView4"
                android:background="#ededed"
                android:layout_below="@+id/button8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem isprum dolor sit"
                android:id="@+id/textView6"
                android:textSize="18dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:textColor="#4c89c1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur  adipiscing elit. Duis blandit lacus odio,  tempus fermentum ipsum ultricies in.  Duis molestie at erat ac consequat.  Pellentesque elit nunc, pharetra congue  lacinia vitae, scelerisque et diam"
                android:id="@+id/textView8"
                android:textColor="#b8b8b8"
                android:lineSpacingExtra="5dp"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/imageView11"
                android:text="+40 1234 123 123"
                android:textColor="#5f5f5f"
                android:drawablePadding="15dip"
                android:onClick="callMe"
                android:drawableLeft="@drawable/phone_blue"
                android:background="#0fff"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignEnd="@+id/textView8"
                android:gravity="center_vertical|left" />


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/imageView20"
                android:background="#ededed"
                android:layout_below="@+id/imageView11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="-14dp"
                android:layout_marginRight="-14dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/button17"
                android:gravity="left|center_vertical"
                android:text="Strada Eroilor, nr 142b"
                android:textColor="#5f5f5f"
                android:drawablePadding="15dip"
                android:onClick="callMe"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/map_blue_nine"
                android:background="#0fff"
                android:layout_below="@+id/imageView20"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignRight="@+id/imageView11"
                android:layout_alignEnd="@+id/imageView11" />

            <GridView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gridView"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                android:layout_below="@+id/button17"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Servicii"
                android:id="@+id/button11"
                android:textColor="#fff"
                android:drawableLeft="@drawable/back_arrow_white"
                android:drawablePadding="5dp"
                android:background="@drawable/back_button"
                android:padding="10dp"
                android:onClick="simulateBack"

                android:nestedScrollingEnabled="false"
                android:layout_below="@+id/gridView"
                android:layout_alignLeft="@+id/button17"
                android:layout_alignStart="@+id/button17"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/imageView19"
                android:background="#ededed"
                android:layout_below="@+id/button17"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

